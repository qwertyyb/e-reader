{
  "short_name": "E-Reader",
  "name": "易读 E-Reader",
  "start_url": "./index.html?scene=default",
  "background_color": "#ffffff",
  "display_override": ["fullscreen", "standalone", "minimal-ui"],
  "display": "standalone",
  "id": "/e-reader/",
  "description": "易读 E-Reader: 读你想读，自由自在",
  "theme_color": "#3563A9",
  "dir": "ltr",
  "lang": "zh",
  "categories": ["utilities", "books",  "personalization", "productivity"],
  "share_target": {
    "action": "./index.html?scene=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [
            "text/plain", "application/epub+zip", "application/x-mobipocket-ebook",
            ".txt", ".epub", ".mobi"
          ]
        }
      ]
    }
  },
  "icons": [
    {
      "src": "./icons/icon512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "./icons/icon256.png",
      "type": "image/png",
      "sizes": "256x256"
    },
    {
      "src": "./icons/icon128.png",
      "type": "image/png",
      "sizes": "128x128"
    },
    {
      "src": "./icons/icon96.png",
      "type": "image/png",
      "sizes": "96x96"
    },
    {
      "src": "./icons/icon64.png",
      "type": "image/png",
      "sizes": "64x64"
    },
    {
      "src": "./icons/icon48.png",
      "type": "image/png",
      "sizes": "48x48"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "orientation": "any",
  "screenshots": [
    {
      "src": "./snapshots/书架.PNG",
      "type": "image/png",
      "sizes": "1170x2532",
      "label": "书架界面",
      "form_factor": "wide"
    },
    {
